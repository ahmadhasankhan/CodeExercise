<p id="notice"><%= notice %></p>

<h1>Listing Rovers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position x</th>
      <th>Position y</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rovers.each do |rover| %>
      <tr>
        <td><%= rover.name %></td>
        <td><%= rover.position_x %></td>
        <td><%= rover.position_y %></td>
        <td><%= rover.direction %></td>
        <td><%= link_to 'Show', rover %></td>
        <td><%= link_to 'Edit', edit_rover_path(rover) %></td>
        <td><%= link_to 'Destroy', rover, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

